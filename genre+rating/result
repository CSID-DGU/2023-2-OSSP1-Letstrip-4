    "# 객체에서 name만 추출: 사전 마다 name을 추출\n",
    "movies_df['genres'] = movies_df['genres'].apply(lambda x : [ dic['name'] for dic in x] )\n",
    "movies_df['keywords'] = movies_df['keywords'].apply(lambda x : [ dic['name'] for dic in x] )\n",
